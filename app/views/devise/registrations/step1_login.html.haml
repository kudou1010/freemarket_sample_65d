    =link_to(root_path, class:'image') do
      = image_tag "fmarket_logo_red.svg", size: "185x49", class: "logo"

  .newUsermain
    .newUsermain__title
      新規会員登録
    .newUsermain__contents
      =link_to step2_user_form_registrations_path, class:'newUsermain__contents__mail' do
        = icon('far', 'envelope', class: 'mail')
